{% for domain in staticsite_domains[1:] %}
server {
  server_name                  {{ domain }};
  return                       301 $scheme://{{ staticsite_domains[0] }}$request_uri;
}
{% endfor %}

server {
    listen                          80;
    server_name                     {{ staticsite_domains[0] }};
    root                            {{ staticsite_base_path }}/{{ staticsite_id }};

    location / {
      index                         index.htm index.html;
{% if staticsite_autoindex %}
      autoindex                     on;
{% endif %}
{% for entry in staticsite_custom_rules %}
      {{ entry }}
{% endfor %}
    }

    #error_page 403                 /error/403.html;
    #error_page 404                 /error/404.html;
    #error_page 500 501 502 503 504 /error/5xx.html;

    #location ^~ /error/ {
    #    internal;
    #    root {{ staticsite_base_path }}/{{ staticsite_id }}/htdocs;
    #}

{% if staticsite_custom_404  %}
    error_page 404                 {{ staticsite_custom_404 }};
    location = {{ staticsite_custom_404 }} {
        internal;
    }
{% endif %}

    location ~* \.(js|css|png|jpg|jpeg|bmp|gif|ico|ttf|otf|woff)$ {
      expires                  max;
      log_not_found            off;
    }

    location ~ /\.(git|htaccess) {
      deny                     all;
    }

    access_log /var/log/nginx/{{ staticsite_id }}-access.log main;
    error_log  /var/log/nginx/{{ staticsite_id }}-error.log  warn;

}
